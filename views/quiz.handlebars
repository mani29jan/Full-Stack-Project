<a class="box-office-link" href="/">Box Office</a>
<section id="quiz-content" class="section">
  <div id="main" class="container">
    <h1 class="quiz-header">{{username}} <span id="play">is currently playing</span> the {{category}} quiz</h1>
    <h2 class="quiz-header"><span id="scoreText">Current</span> Score:  <span id='current-score'>0</span></h2>
    
    <div class="columns">
      <div id="question-container" class="column">
        {{questions}}
      </div>
    </div>

    <section id="answers" class="btn-grid">
      <div class="row">
        <button id="answer1" class="btn">{{answer1}}</button>
      </div>
      
      <div class="row">
        <button id="answer2" class="btn">{{answer2}}</button>
      </div>
      
      <div class="row">
        <button id="answer3" class="btn">{{answer3}}</button>
      </div>
      
      <div class="row">
        <button id="answer4" class="btn">{{answer4}}</button>
      </div>
    </section>
    <h3 id="timer"></h3>
    <section id="highscores" class="btn-grid">
      <div class="row">
        <a id="hs-link" href="/highscores" class="btn">View High Scores</a>
      </div>
    </section>
    
    
    
  </div>
</section>

<modal id="score-input" class="hide">
  <input>
  <input>

</modal>

<div id="cat" style="display: none;">{{category}}</div>
<div id="user_id" style="display: none;">{{user_id}}</div>
<div id="username" style="display: none;">{{username}}</div>


<script src="/javascript/quiz.js"></script>